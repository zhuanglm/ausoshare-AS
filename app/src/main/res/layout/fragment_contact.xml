<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp" >
    
    <ImageView
        android:id="@+id/img_bk"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingTop="20dp"
        android:src="@drawable/zi" />
    
     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_bk"
        android:layout_marginBottom="5dp" >

    <RelativeLayout
        android:id="@+id/contact_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        
        >

        <RelativeLayout
            android:id="@+id/contact_t_c_layout"
            style="@style/myProfileLayout"
            >

            <ImageView
                android:id="@+id/contact_t_c_image"
                style="@style/image_setting"
                android:src="@drawable/btn_declare_bg" />

            <TextView
                android:id="@+id/contact_t_c_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_t_c_image"
                android:text="@string/contact_t_c_text" 
                />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_incoming_rule_layout"
            style="@style/myProfileLayout"
            android:descendantFocusability="blocksDescendants"
            android:background="@drawable/text_view_clicked"
            android:layout_below="@+id/contact_t_c_layout">

            <ImageView
                android:id="@+id/contact_income_rule_image"
                style="@style/image_setting"
                android:src="@drawable/btn_income_bg" />

            <TextView
                android:id="@+id/contact_income_rule_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_income_rule_image"
                android:text="@string/contact_incoming_rule_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_withdraw_rule_layout"
            style="@style/myProfileLayout"
            android:layout_below="@+id/contact_incoming_rule_layout">

            <ImageView
                android:id="@+id/contact_withdraw_rule_image"
                style="@style/image_setting"
                android:src="@drawable/btn_withdraw_bg" />

            <TextView
                android:id="@+id/contact_withdraw_rule_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_withdraw_rule_image"
                android:text="@string/contact_withdraw_rule_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_company_introduction_layout"
            style="@style/myProfileLayout"
            android:layout_below="@+id/contact_withdraw_rule_layout">

            <ImageView
                android:id="@+id/contact_company_introduction_image"
                style="@style/image_setting"
                android:src="@drawable/btn_bulb_bg" />

            <TextView
                android:id="@+id/contact_company_introduction_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_company_introduction_image"
                android:text="@string/contact_company_introduction_text" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/contact_questions_answers_layout"
            style="@style/myProfileLayout"
            android:layout_below="@+id/contact_company_introduction_layout">

            <ImageView
                android:id="@+id/contact_questions_answers_image"
                style="@style/image_setting"
                android:src="@drawable/btn_message_bg" />

            <TextView
                android:id="@+id/contact_questions_answers_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_questions_answers_image"
                android:text="@string/contact_questions_answers_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_customer_layout"
            style="@style/myProfileLayout"
            android:layout_below="@+id/contact_questions_answers_layout">

            <ImageView
                android:id="@+id/contact_customer_image"
                style="@style/image_setting"
                android:src="@drawable/btn_phone_bg" />

            <TextView
                android:id="@+id/contact_customer_tv"
                style="@style/myProfile"
                android:layout_toRightOf="@+id/contact_customer_image"
                android:text="@string/contact_customer_text" />
        </RelativeLayout>

    </RelativeLayout>

 </ScrollView>

</RelativeLayout>
